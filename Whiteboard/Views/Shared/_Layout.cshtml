<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@(ViewBag.Title + (string.IsNullOrEmpty(ViewBag.Title) ? "" : " - ")) Whiteboard</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        @Styles.Render("~/Content/bootstrap")
        @Styles.Render("~/Content/dot.less")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>

        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/">Whiteboard</a>
                    @RenderSection("header", required: false)
                    @Html.Partial("_LoginPartial")
                    <div class="btn-group pull-right">
                        @Html.ActionLink("New Board", "Create", "Board", null, new { @class = "btn btn-primary" })
                    </div>
                    <div class="nav-collapse">
                    </div><!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="container-fluid">
            @RenderBody()
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/knockout")
        @RenderSection("scripts", required: false)
    </body>
</html>
